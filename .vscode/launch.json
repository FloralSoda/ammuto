	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "[Unit Test] Ammuto Lib",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--lib",
					"--package=ammuto-lib"
				],
				"filter": {
					"name": "ammuto-lib",
					"kind": "lib"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "[Unit Test] Ammuto CLI",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=ammuto-cli",
					"--package=ammuto-cli"
				],
				"filter": {
					"name": "ammuto-cli",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "[Debug] Ammuto CLI",
			"cargo": {
				"args": [
					"build",
					"--bin=ammuto-cli",
					"--package=ammuto-cli"
				],
				"filter": {
					"name": "ammuto-cli",
					"kind": "bin"
				}
			},
			
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}
